<div class="container mb-4">
  <div class="col-10 col-md-8 col-lg-6 mx-auto mt-5">
    <div class="card card-body">
      <h3 class="text-center mt-2">登 入 記 帳 本
        <i class="fas fa-search-dollar"></i></h3>
      <h1 class="text-center mb-3">Sign In</h1>
      {{> message}}
      <form action="/users/login" method="post" class="row">
        <div class="col-10 mx-auto my-2">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <div class="col-10 mx-auto my-2">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <button type="submit" class="btn btn-primary col-4 mx-auto my-3"><i
            class="fas fa-sign-in-alt"
          ></i>
          登 入</button>
        <a
          href="/auth/facebook"
          class="btn btn-outline-primary col-10 mx-auto"
        ><i class="fab fa-facebook"></i> Facebook 登 入</a>
      </form>
      <p class="mt-3 mx-auto col-10 font-monospace lead">
        No Account?
        <a href="/users/register">Sign Up</a>
      </p>
      <p class="mt-3 mx-auto col-10 lead">
        還沒有帳戶？
        <a href="/users/register">註冊一個</a>
      </p>
    </div>
  </div>
</div>